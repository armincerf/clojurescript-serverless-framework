{
    "private": true,
    "scripts": {
        "clean": "rm -rf gen",
        "babel:release": "babel --presets @babel/preset-typescript src/js -d gen/jsviews --extensions .tsx,.jsx,.ts,.js",
        "postcss:release": "cross-env NODE_ENV=production postcss src/css/tailwind.css -o ./target/css/main.css --verbose",
        "shadow:release": "shadow-cljs release app",
        "shadow:watch": "shadow-cljs -A:dev watch app",
        "postcss:watch": "cross-env TAILWIND_MODE=watch postcss src/css/tailwind.css -o ./public/css/main.css --verbose -w",
        "babel:watch": "babel --presets @babel/preset-typescript src/js -d gen/jsviews --watch --extensions .tsx,.jsx,.ts,.js",
        "dev": "npm run clean && run-p -l *:watch",
        "release": "run-s clean *:release",
        "debug": "shadow-cljs release app --debug",
        "storybook": "start-storybook -p 6006",
        "build-storybook": "build-storybook"
    },
    "dependencies": {
        "@types/jest": "^26.0.15",
        "@types/node": "^12.0.0",
        "@types/react": "^17.0.0",
        "@types/react-dom": "^17.0.0",
        "cssnano": "^5.0.5",
        "daisyui": "^1.14.0",
        "npm-run-all": "^4.1.5",
        "postcss-cli": "^8.3.1",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-refresh": "^0.10.0",
        "typescript": "4.3.5"
    },
    "devDependencies": {
        "@babel/cli": "^7.15.4",
        "@babel/core": "^7.15.5",
        "@babel/plugin-syntax-jsx": "^7.14.5",
        "@babel/plugin-transform-react-jsx": "^7.14.9",
        "@babel/preset-env": "^7.15.6",
        "@babel/preset-react": "^7.14.5",
        "@babel/preset-typescript": "^7.15.0",
        "@storybook/addon-actions": "^6.3.8",
        "@storybook/addon-docs": "^6.3.8",
        "@storybook/addon-essentials": "^6.3.8",
        "@storybook/addon-links": "^6.3.8",
        "@storybook/addon-postcss": "^2.0.0",
        "@storybook/react": "^6.3.8",
        "autoprefixer": "10.3.4",
        "babel-loader": "^8.2.2",
        "cross-env": "^7.0.3",
        "postcss": "8.3.6",
        "shadow-cljs": "^2.15.9",
        "storybook-dark-mode": "^1.0.8",
        "tailwindcss": "2.2.15"
    }
}
